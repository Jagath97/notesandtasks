<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_rem"
        android:elevation="4dp"
        app:cardCornerRadius="2dp"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:targetApi="lollipop">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear_card"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/thumbnai_rem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_alarm_on_black_24dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/rem_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="72dp"
                android:textSize="17sp"
                android:text="title"
                android:textColor="@color/black_de"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingStart="72dp"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/rem_date_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rem_title"
                android:ellipsize="end"
                android:maxLines="5"
                android:paddingTop="10dp"
                android:text="date"
                android:paddingLeft="72dp"
                android:textColor="@color/black_de"
                android:textSize="17sp"
                android:paddingStart="72dp"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/rem_repeat"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rem_date_time"
                android:ellipsize="end"
                android:text="repeat"
                android:visibility="invisible"
                android:paddingLeft="72dp"
                android:textColor="@color/black_de"
                android:textSize="17sp"
                android:paddingStart="72dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8942;"
                android:id="@+id/optiondigit"
                android:textColor="@color/black_de"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_alignParentRight="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:visibility="invisible"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>