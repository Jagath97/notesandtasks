<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/new_rem1"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarr1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:orientation="vertical"
        android:id="@+id/new_rem_lin_lay"
        android:layout_below="@+id/new_rem1"
        android:layout_width="match_parent"
        android:layout_height="148dp">
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/remainder_title"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:hint="Remainder"
            android:textSize="25dp"
            android:lines="4"
            android:maxLines="4"
            android:gravity="top|left"
            android:scrollHorizontally="false"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_marginRight="16dp"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/new_rem_lin_lay"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:clickable="true"
        android:id="@+id/details"
        android:background="?android:selectableItemBackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:text="Details"
            android:textSize="15dp"
            android:layout_marginLeft="73dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:id="@+id/textView3" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_alarm_on_black_24dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:clickable="true"
        android:id="@+id/date"
        android:onClick="setDate"
        android:background="?android:selectableItemBackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:text="Date"
            android:textSize="15dp"
            android:id="@+id/date_picker_rem"
            android:layout_marginLeft="73dp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_date_range_black_24dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:clickable="true"
        android:onClick="setTime"
        android:id="@+id/time"
        android:background="?android:selectableItemBackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:text="Time"
            android:id="@+id/time_picker_rem"
            android:textSize="15dp"
            android:layout_marginLeft="73dp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/thumbnai_rem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:clickable="true"
        android:id="@+id/switchd"
        android:background="?android:selectableItemBackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:text="Repeat"
            android:textSize="15dp"
            android:layout_marginLeft="73dp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/switch_rem"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:clickable="true"
        android:id="@+id/interval"
        android:background="?android:selectableItemBackground">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:textSize="15dp"
            android:layout_marginLeft="73dp"
            android:layout_marginRight="73dp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_save_black_24dp"
            app:fabSize="normal" />
    </RelativeLayout>

</LinearLayout>
    </ScrollView>
</RelativeLayout>